# Configuration Environment Variables for Tipsy Elite
# Copy this file to .env and adjust values for your setup

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Full screen interface (true/false)
FULL_SCREEN=true

# Screen rotation in degrees (0, 90, 180, 270)
SCREEN_ROTATION=0

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# Pump flow rate coefficient (seconds to pour 30ml)
OZ_COEFFICIENT=8.0

# Number of pumps operating simultaneously
PUMP_CONCURRENCY=3

# Invert pump pin directions (true/false)
INVERT_PUMP_PINS=true

# Retraction time after pouring (seconds)
RETRACTION_TIME=0.5

# =============================================================================
# COCKTAIL CONFIGURATION
# =============================================================================

# Cocktail image scale factor (0.1 to 1.0)
COCKTAIL_IMAGE_SCALE=0.7

# Auto-reload cocktails timeout (seconds, 0=disabled)
RELOAD_COCKTAILS_TIMEOUT=0

# Show manual reload button (true/false)
SHOW_RELOAD_COCKTAILS_BUTTON=false

# Enable favorites system (true/false)
ALLOW_FAVORITES=true

# =============================================================================
# FILE PATHS
# =============================================================================

# Pump configuration file
PUMP_CONFIG_FILE=config/pump_config.json

# Cocktails database file
COCKTAILS_FILE=config/cocktails.json

# Logo assets folder
LOGO_FOLDER=assets/logos

# =============================================================================
# AI FEATURES (Optional)
# =============================================================================

# OpenAI API key for AI cocktail generation (optional)
OPENAI_API_KEY=

# Use GPT transparency for images (true/false)
USE_GPT_TRANSPARENCY=false

# =============================================================================
# CLEANING SYSTEM
# =============================================================================

# Auto cleaning enabled (true/false)
AUTO_CLEANING_ENABLED=true

# Quick cleaning interval (number of cocktails)
QUICK_CLEANING_INTERVAL=5

# Standard cleaning interval (hours)
STANDARD_CLEANING_INTERVAL=24

# Deep cleaning interval (hours - 168 = 1 week)
DEEP_CLEANING_INTERVAL=168

# Maximum cocktails without cleaning
MAX_COCKTAILS_WITHOUT_CLEANING=10

# =============================================================================
# SAFETY CONFIGURATION
# =============================================================================

# Maximum pour time per pump (seconds)
MAX_POUR_TIME=60

# Safety timeout for all operations (seconds)
SAFETY_TIMEOUT=120

# Emergency stop pin (GPIO number, optional)
EMERGENCY_STOP_PIN=47

# =============================================================================
# NETWORK CONFIGURATION (Optional)
# =============================================================================

# Enable web interface (true/false)
WEB_INTERFACE_ENABLED=false

# Web interface port
WEB_INTERFACE_PORT=8000

# MQTT broker for remote control (optional)
MQTT_BROKER=

# MQTT port
MQTT_PORT=1883

# MQTT username (optional)
MQTT_USERNAME=

# MQTT password (optional)
MQTT_PASSWORD=

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable performance metrics (true/false)
ENABLE_METRICS=true

# Metrics export port (for Prometheus)
METRICS_PORT=9090

# =============================================================================
# DISPLAY CONFIGURATION
# =============================================================================

# Touch sensitivity (0.1 to 1.0)
TOUCH_SENSITIVITY=0.95

# Animation frame rate (FPS)
ANIMATION_FPS=60

# Idle timeout before returning to splash screen (seconds)
IDLE_TIMEOUT=60

# =============================================================================
# AUDIO CONFIGURATION (Optional)
# =============================================================================

# Enable sound effects (true/false)
ENABLE_SOUND=true

# Sound volume (0.0 to 1.0)
SOUND_VOLUME=0.7

# Enable voice announcements (true/false)
ENABLE_VOICE=false

# Voice language (en, fr, es, de, etc.)
VOICE_LANGUAGE=en

# =============================================================================
# ADVANCED HARDWARE SETTINGS
# =============================================================================

# PWM frequency for pump control (Hz)
PWM_FREQUENCY=1000

# Minimum PWM duty cycle (%)
MIN_PWM_DUTY=30

# Maximum PWM duty cycle (%)
MAX_PWM_DUTY=100

# Pump acceleration time (seconds)
PUMP_ACCELERATION_TIME=0.5

# Pump deceleration time (seconds)
PUMP_DECELERATION_TIME=0.3

# =============================================================================
# CALIBRATION SETTINGS
# =============================================================================

# Enable automatic calibration (true/false)
AUTO_CALIBRATION=true

# Calibration sample size (number of measurements)
CALIBRATION_SAMPLES=5

# Calibration tolerance (percentage)
CALIBRATION_TOLERANCE=5.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development mode (true/false)
DEV_MODE=false

# Mock hardware for testing (true/false)
MOCK_HARDWARE=false

# Enable telemetry (true/false)
ENABLE_TELEMETRY=false